<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardElevation="@dimen/_2sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/Bcs"
                    android:textColor="@color/LiteBlack"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/btnNotification"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <include
                        layout="@layout/notification_icon_layout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        />
                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp">


                    <LinearLayout
                        android:id="@+id/l40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/liveExam"
                            android:textColor="@color/DeepGrey"
                            android:textSize="@dimen/_15ssp" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvLiveExam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone" />


                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmerLiveExam"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:visibility="visible">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/horizontalScrollView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:scrollbars="none">

                                    <include layout="@layout/shimer_live_model_test" />

                                    <include layout="@layout/shimer_live_model_test" />
                                </LinearLayout>
                            </HorizontalScrollView>


                        </com.facebook.shimmer.ShimmerFrameLayout>


                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/adContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/baloo_bhaina_2_medium"
                                android:text="বিষয় সমূহ"
                                android:textColor="@color/DeepGrey"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/btnShowAllSubject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center_vertical"
                                android:gravity="end"
                                android:text="@string/showAll"
                                android:textColor="@color/DeepGrey"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollIndicators="none"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/tvInternationalAffairs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@drawable/round_bg"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="125dp"
                                        android:layout_height="125dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="10dp"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/school" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_12sdp"
                                        android:background="@drawable/bottom_sheet_round">

                                        <TextView
                                            android:id="@+id/tvSubjectName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:lineSpacingMultiplier="0.8"
                                            android:paddingStart="@dimen/_4sdp"
                                            android:paddingEnd="@dimen/_4sdp"
                                            android:text="আন্তর্জাতিক বিষয়াবলি "
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10ssp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/tvBangladeshAffairs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@drawable/round_bg"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="125dp"
                                        android:layout_height="125dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="10dp"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/graduation" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_12sdp"
                                        android:background="@drawable/bottom_sheet_round">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:lineSpacingMultiplier="0.8"
                                            android:paddingStart="@dimen/_4sdp"
                                            android:paddingEnd="@dimen/_4sdp"
                                            android:text="বাংলাদেশ বিষয়াবলি"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10ssp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/tvGeography"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@drawable/round_bg"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="125dp"
                                        android:layout_height="125dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="10dp"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/geography" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_12sdp"
                                        android:background="@drawable/bottom_sheet_round">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:lineSpacingMultiplier="0.8"
                                            android:paddingStart="@dimen/_4sdp"
                                            android:paddingEnd="@dimen/_4sdp"
                                            android:text="ভূগোল"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10ssp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/tvAllSubject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@drawable/round_bg"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="125dp"
                                        android:layout_height="125dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="10dp"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/application" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_12sdp"
                                        android:background="@drawable/bottom_sheet_round">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:lineSpacingMultiplier="0.8"
                                            android:paddingStart="@dimen/_4sdp"
                                            android:paddingEnd="@dimen/_4sdp"
                                            android:text="@string/showAll"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10ssp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/baloo_bhaina_2_medium"
                        android:text="@string/practice"
                        android:textColor="@color/DeepGrey"
                        android:textSize="@dimen/_15ssp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/exams"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvAllExam"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/lite_round_baground"
                                    android:gravity="center"
                                    android:padding="13dp"
                                    android:text="@string/overAllExam"
                                    android:textColor="@color/LiteBlack2"
                                    android:textSize="15sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnQuestionBank"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/lite_round_baground"
                                    android:gravity="center"
                                    android:padding="13dp"
                                    android:text="@string/questionBank"
                                    android:textColor="@color/LiteBlack2"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/practice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvPractice"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/lite_round_baground"
                                    android:gravity="center"
                                    android:padding="13dp"
                                    android:text="@string/practice"
                                    android:textColor="@color/LiteBlack2"
                                    android:textSize="15sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/CvImportantQuestion"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/lite_round_baground"
                                    android:gravity="center"
                                    android:padding="13dp"
                                    android:text="@string/importantQuestion"
                                    android:textColor="@color/LiteBlack2"
                                    android:textSize="15sp" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/subjectBasedExam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/lite_round_baground"
                        android:orientation="horizontal"
                        android:weightSum="3"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.1"
                            android:orientation="vertical"
                            android:paddingStart="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="@string/subjectBasedExam"
                                    android:textColor="@color/DeepGrey"
                                    android:textSize="20sp"
                                    android:textStyle="normal" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_baseline_arrow_forward_24" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="12dp"
                                android:paddingBottom="15dp"
                                android:text="@string/subjectExamDsc"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="0.9"
                            android:padding="@dimen/_8sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/idea" />


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </LinearLayout>


</FrameLayout>