<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@drawable/white_bg_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivNotificationImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/roundedImageViewStyle" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|start"
                android:padding="10dp"
                android:src="@drawable/baseline_close_dark_24"
                android:visibility="visible" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white"
                android:text="ঢাকা বিশ্ববিদ্যালয়ের ভিসি'র বিরুদ্ধে প্রথম "
                android:textColor="@color/LiteBlack"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:text="কিন্তু আর্টিকেলটি সে লিখেছে নতুন ভিসি নিয়োগ পাওয়ার মাত্র এক সপ্তাহের মধ্যে। ভদ্রলোক এখনো নতুন পজিশনে থিতুই হন নি। তার সামনে এখন অনেক চ্যালেঞ্জ। এমন একটি সময়ে তাকে বাড়ি ছাড়তে হবে কেন? তিনি কোথায় যাবেন? কোথায় গিয়ে উঠবেন?
নতুন ভিসি নিয়োগ পাওয়ার পর শিক্ষক নেটওয়ার্কের সদস্যদের মধ্যে উত্তেজনা দেখা গেছে। তাদের এক সদস্য ফেসবুকে প্রকাশ্যেই বলেছেন, তিনি এই নিয়োগে সন্তুষ্ট নন। আরেক সদস্য আইডিয়া দিয়েছেন এই বড় বাসাকে জাদুঘর বানানোর জন্য। এখন ছাপা হল একই দাবি নিয়ে আর্টিকেল। প্রথম আলোতে। সব বামপন্থীর সূত্র এক। "
                android:textAlignment="textStart"
                android:textColor="@color/LiteBlack"
                android:textSize="@dimen/_14ssp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/button_round_bg"
        android:gravity="center"
        android:paddingStart="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:text="বন্ধ করুন"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />
</RelativeLayout>
