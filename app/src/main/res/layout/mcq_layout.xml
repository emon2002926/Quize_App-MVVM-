<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/lite_round_baground"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvQuestionPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:text="1)"
                android:textColor="@color/DeepGrey"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/questionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text=""
                android:textAlignment="inherit"
                android:textColor="@color/LiteBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/questionIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                android:visibility="gone" />


        </LinearLayout>

        <!--        option 1 layOut-->
        <RelativeLayout
            android:id="@+id/option1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"

            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"

                >

                <LinearLayout
                    android:id="@+id/iconBackground1"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_back_white"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/option1Icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        app:shapeAppearanceOverlay="@style/round_image_style" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tVIndication1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="ক)"
                    android:textColor="@color/LiteBlack"
                    android:textSize="16dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/option1Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp"
                android:padding="5dp"
                android:text="Option 1"
                android:textColor="@color/LiteBlack"
                android:textSize="16sp"
                android:visibility="visible"

                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/optionIcon1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/round_image_style" />

            <ImageView
                android:id="@+id/option1Iv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="50sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </RelativeLayout>
        <!--        option 2 layout-->

        <RelativeLayout
            android:id="@+id/option2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/iconBackground2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_back_white"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/option2Icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"

                        android:scaleType="fitXY"
                        app:shapeAppearanceOverlay="@style/round_image_style" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="খ)"
                    android:textColor="@color/LiteBlack"
                    android:textSize="16dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/option2Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp"
                android:padding="5dp"
                android:text="Option 2"
                android:textColor="@color/LiteBlack"
                android:textSize="16sp"
                android:visibility="visible" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/optionIcon2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/option2Iv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="50sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:visibility="gone" />


        </RelativeLayout>

        <!--        option 3 layout-->
        <RelativeLayout
            android:id="@+id/option3Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/iconBackground3"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_back_white"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/option3Icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:scaleType="fitXY"

                        app:shapeAppearanceOverlay="@style/round_image_style" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="গ)"
                    android:textColor="@color/LiteBlack"
                    android:textSize="16dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/option3Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5sp"
                android:padding="5dp"
                android:text="Option 3"
                android:textColor="@color/LiteBlack"
                android:textSize="16sp"
                android:visibility="visible" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/optionIcon3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/option3Iv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="50sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </RelativeLayout>
        <!--        option 4 layout-->
        <RelativeLayout
            android:id="@+id/option4Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/iconBackground4"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_back_white"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/option4Icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        app:shapeAppearanceOverlay="@style/round_image_style"

                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="ঘ)"
                    android:textColor="@color/LiteBlack"
                    android:textSize="16dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/option4Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:text="Option 4"
                android:textColor="@color/LiteBlack2"
                android:textSize="16sp"
                android:visibility="visible" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/optionIcon4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/option4Iv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="50sp"
                android:layout_marginBottom="5sp"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/explainTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/pink_baground"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/explainIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>