<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:background="@drawable/lite_round_baground"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/fullLayout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionBatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="44th Batch BCS Question"
            android:textColor="@color/LiteBlack2"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/numOfQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:text="@string/amountOfQuestion"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:visibility="gone"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/download_animation" />

        <ImageView
            android:id="@+id/savedImage"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/saved"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/downloadNowImage"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="5dp"
            android:padding="2dp"
            android:src="@drawable/download_now"
            android:visibility="visible" />


    </LinearLayout>


</RelativeLayout>